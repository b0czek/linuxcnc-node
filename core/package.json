{
  "name": "@linuxcnc-node/core",
  "version": "2.1.2",
  "description": "Node.js bindings for core LinuxCNC NML interface",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:ts": "tsc",
    "build:cpp": "node-gyp configure && node-gyp build",
    "build": "npm run build:cpp && npm run build:ts",
    "rebuild": "node-gyp rebuild",
    "install": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "jest --runInBand",
    "test:unit": "jest --runInBand --testPathPattern=tests/unit",
    "test:integration": "jest --runInBand --testPathPattern=tests/integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:coverage": "jest --coverage --runInBand",
    "docs": "typedoc",
    "docs:publish": "npm run docs && gh-pages -d docs"
  },
  "author": "Dariusz Majnert",
  "repository": {
    "type": "git",
    "url": "https://github.com/b0czek/linuxcnc-node.git",
    "directory": "core"
  },
  "license": "GPL-2.0-only",
  "dependencies": {
    "@linuxcnc-node/types": "^2.1.1",
    "dlv": "^1.1.3",
    "dset": "^3.1.4",
    "node-addon-api": "^8.3.1"
  },
  "devDependencies": {
    "@types/dlv": "^1.1.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "gh-pages": "^6.3.0",
    "jest": "^29.7.0",
    "node-gyp": "^11.2.0",
    "ts-jest": "^29.3.4",
    "typedoc": "^0.28.7",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/",
    "src/cpp",
    "scripts/",
    "binding.gyp",
    "README.md"
  ],
  "gypfile": true,
  "os": [
    "linux"
  ],
  "keywords": [
    "linuxcnc",
    "hal",
    "cnc",
    "hardware abstraction layer",
    "machining",
    "automation",
    "robotics",
    "motion control",
    "native",
    "addon",
    "bindings",
    "manufacturing",
    "industrial"
  ]
}
